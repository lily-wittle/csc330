<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/enter_title"
        android:hint="@string/title_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"/>

    <EditText
        android:id="@+id/enter_text"
        android:hint="@string/text_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/enter_text_height"
        android:layout_marginBottom="@dimen/margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/take_photo_height"
        android:layout_marginBottom="@dimen/margin"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/take_photo"
            android:text="@string/take"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:onClick="myCreateClickHandler"/>

        <ImageView
            android:id="@+id/display_photo"
            android:layout_width="@dimen/photo_width"
            android:layout_height="@dimen/photo_height" />

    </LinearLayout>

    <TextView
        android:id="@+id/current_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/divider" />

    <TextView
        android:id="@+id/current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/divider" />

    <TextView
        android:id="@+id/current_orientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:onClick="myCreateClickHandler"/>

</LinearLayout>