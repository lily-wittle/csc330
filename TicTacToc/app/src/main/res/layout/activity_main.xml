<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/WelcomeRow">
        <TextView
            style="@style/PlayerName"
            android:id="@+id/p1_name"
            android:text="@string/p1_name"/>
        <Button
            style="@style/Button.Red" />
    </LinearLayout>

    <RatingBar
        style="@style/Rating"
        android:id="@+id/p1_rate">
    </RatingBar>

    <LinearLayout
        style="@style/WelcomeRow">
        <TextView
            style="@style/PlayerName"
            android:id="@+id/p2_name"
            android:text="@string/p2_name"/>
        <Button
            style="@style/Button.Green" />
    </LinearLayout>

    <RatingBar
        style="@style/Rating"
        android:id="@+id/p2_rate">
    </RatingBar>

    <LinearLayout
        style="@style/CenterLayout">
        <Button
            style="@style/StartButton"
            android:text="@string/start"/>
    </LinearLayout>

</LinearLayout>