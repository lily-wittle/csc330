<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VertActivityLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HorizRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="Rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">@integer/max_rate</item>
        <item name="android:rating">@integer/start_rate</item>
    </style>

    <style name="PlayerName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="PlayerName.Center_Vert">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PlayerName.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@color/playerone</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@color/playertwo</item>
    </style>

    <style name="SmallButton">
        <item name="android:layout_width">@dimen/small_button_size</item>
        <item name="android:layout_height">@dimen/small_button_size</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="SmallButton.Red">
        <item name="android:background">@color/playerone</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SmallButton.Green">
        <item name="android:background">@color/playertwo</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="CenterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StartButton">
        <item name="android:layout_width">@dimen/start_width</item>
        <item name="android:layout_height">@dimen/start_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="MyBar">
        <item name="android:layout_width">@dimen/progress_bar_width</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:max">@integer/bar_time</item>
    </style>

    <style name="ContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GridSpacing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:columnWidth">@dimen/small_button_size</item>
        <item name="android:numColumns">@integer/num_col</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="Space">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">@integer/space_weight</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="GridContainer">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@integer/grid_weight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
